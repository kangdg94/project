			userID=(String) session.getAttribute("userID");
		}
		  
		if (userID == null) {
			PrintWriter script = response.getWriter();
			script.println("<script>");
			script.println("alert('please login')");
			script.println("location.href = 'join.jsp'");
			script.println("</script>");
			script.close();
			return;
		}
